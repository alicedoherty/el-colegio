void settings () {
  size(SCREEN_X, SCREEN_Y);  
}

void setup() {
  background(255);
  myFont = createFont("NSimSun",20,true);
  frameRate(80);
  array = new int[]{50,110,210,160,35,90,12,100,158,60,150,26,0,35,389,0};
