Widget masterPageHome, masterPageWinners, masterPageLosers;



void drawMasterList(){
  // background color
  pushMatrix();
  background(242,242,242);
  
  //scrollBar(mouseY);
  float newYValue = scrollBar.scrollValue();  
  translate (0, newYValue);
  drawTitle();
  drawStockNames();
  drawOpenPrice();
  drawClosePrice();
  drawChangeOverTime();
  drawGainersButtonMaster();
  drawLosersButtonMaster();
  drawHomePageButtonMaster();
  popMatrix();
}

void drawTitle() {
  // title
  strokeWeight(5);
  stroke(64);
  fill(255);
  rect(295, 35, 427, 75);
  fill(0);
  textFont(font1);
  textSize(36);
  text("LIST OF STOCKS", 360, 85);
}
void drawStockNames() {
  // names of stonks
  for (int i = 0; i < latestDataPoints.size(); i++) {
    // use yPlace to choose where to put names of stonks
    int yPlace = (i * 50) + 200;
    strokeWeight(1);
    stroke(255);
    fill(137, 141, 50);
    rect(50, yPlace, 200, 50);
    fill(0);
    textFont(font2);
    textSize(18);
    text(latestDataPoints.get(i).getTicker(), 120, yPlace + 30);
  }
}


void drawOpenPrice() {
    strokeWeight(1);
    stroke(255);
    fill(197,207,210);
    rect(295, 145, 200, 50);
    fill(255);
    textFont(font2);
    textSize(18);
    text("Open Price", 345, 175);
    // repetitve
    for (int i = 0; i < latestDataPoints.size(); i++) {
      // use yPlace to choose where to put names of stonks
      int yPlace = (i * 50) + 200;
      strokeWeight(1);
      stroke(255);
      fill(197,207,210);
      rect(295, yPlace, 200, 50);
      fill(255);
      textFont(font2);
      textSize(18);
      text(latestDataPoints.get(i).getOpenPrice(), 365, yPlace + 30);
    }
}

